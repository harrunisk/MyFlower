<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tarla_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarla ADI  "
            android:layout_marginLeft="15dp"
             android:layout_marginTop="10dp"
            android:textColor="@color/OrangeRed"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"

            android:inputType="textPersonName"
            android:text="Tarla Adı" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tarla_buyuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarla Büyüklüğü  "
            android:textColor="@color/OrangeRed"
            android:textSize="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Dekar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/mahsul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahsul sec  "
            android:textColor="@color/OrangeRed"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/cesit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Çeşidi  "
            android:textColor="@color/OrangeRed"
            android:textSize="15dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/yer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TARLA NEREDE  "
        android:textColor="@color/OrangeRed"
        android:textSize="15dp" />


    </LinearLayout>

</LinearLayout>